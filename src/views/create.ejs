<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create NFT - NFT Marketplace</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-brand">
            <h1>NFT Marketplace</h1>
        </div>
        <div class="nav-menu">
            <a href="/dashboard" class="nav-link">Explore</a>
            <a href="/mynfts" class="nav-link">My NFTs</a>
            <a href="/create" class="nav-link active">Create</a>
        </div>
        <div class="nav-user">
            <div class="wallet-info">
                <span class="wallet-badge">Connected</span>
                <span class="wallet-address"><%= user.account.substring(0, 6) %>...<%= user.account.substring(user.account.length - 4) %></span>
            </div>
            <a href="/logout" class="btn-logout">Disconnect</a>
        </div>
    </nav>

    <!-- Create NFT Header -->
    <section class="marketplace-hero">
        <h2>Create New NFT</h2>
        <p>Mint your digital artwork on the XRP Ledger</p>
    </section>

    <!-- Create Form -->
    <section class="create-section">
        <div class="create-container">
            <div class="create-grid">
                <!-- Left: Image Upload -->
                <div class="upload-section">
                    <h3>Upload File</h3>
                    <div class="upload-area" id="uploadArea">
                        <div class="upload-placeholder">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                <polyline points="17 8 12 3 7 8"></polyline>
                                <line x1="12" y1="3" x2="12" y2="15"></line>
                            </svg>
                            <p>Drag & drop your file here</p>
                            <p class="upload-hint">or click to browse</p>
                            <p class="upload-formats">PNG, JPG, GIF, MP4 (Max 100MB)</p>
                        </div>
                        <img id="previewImage" class="upload-preview hidden" src="" alt="Preview">
                        <input type="file" id="fileInput" accept="image/*,video/*" hidden>
                    </div>
                </div>

                <!-- Right: NFT Details Form -->
                <div class="form-section">
                    <h3>NFT Details</h3>
                    <form id="createNftForm">
                        <div class="form-group">
                            <label for="nftName">Name *</label>
                            <input type="text" id="nftName" placeholder="Enter NFT name" required>
                        </div>

                        <div class="form-group">
                            <label for="nftDescription">Description</label>
                            <textarea id="nftDescription" rows="4" placeholder="Describe your NFT"></textarea>
                        </div>

                        <div class="form-group">
                            <label for="nftCategory">Category *</label>
                            <select id="nftCategory" required>
                                <option value="">Select category</option>
                                <option value="Art">Art</option>
                                <option value="Music">Music</option>
                                <option value="Gaming">Gaming</option>
                                <option value="Photography">Photography</option>
                                <option value="Video">Video</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="nftPrice">Price (XRP) *</label>
                            <input type="number" id="nftPrice" placeholder="0.00" step="0.01" min="0" required>
                        </div>

                        <div class="form-group">
                            <label for="nftRoyalty">Royalty (%)</label>
                            <input type="number" id="nftRoyalty" placeholder="10" min="0" max="50" value="10">
                            <p class="form-hint">Percentage you'll receive from future sales</p>
                        </div>

                        <div class="form-group">
                            <label for="nftSupply">Supply *</label>
                            <input type="number" id="nftSupply" placeholder="1" min="1" value="1" required>
                            <p class="form-hint">Number of copies to mint</p>
                        </div>

                        <div class="form-group checkbox-group">
                            <input type="checkbox" id="agreeTerms" required>
                            <label for="agreeTerms">I agree to the terms and conditions</label>
                        </div>

                        <button type="submit" class="btn-create">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M12 5v14M5 12h14"></path>
                            </svg>
                            Create NFT
                        </button>
                    </form>

                    <div class="creation-info">
                        <h4>Creation Fee</h4>
                        <div class="fee-breakdown">
                            <div class="fee-item">
                                <span>Gas Fee</span>
                                <span>~2 XRP</span>
                            </div>
                            <div class="fee-item">
                                <span>Service Fee</span>
                                <span>2.5%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/js/toast.js"></script>
    <script src="/js/create.js"></script>
</body>
</html>
