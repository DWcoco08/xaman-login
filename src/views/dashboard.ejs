<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NFT Marketplace - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-brand">
            <h1>NFT Marketplace</h1>
        </div>
        <div class="nav-menu">
            <a href="#" class="nav-link active">Explore</a>
            <a href="#" class="nav-link">My NFTs</a>
            <a href="#" class="nav-link">Create</a>
        </div>
        <div class="nav-user">
            <div class="wallet-info">
                <span class="wallet-badge">Connected</span>
                <span class="wallet-address"><%= user.account.substring(0, 6) %>...<%= user.account.substring(user.account.length - 4) %></span>
            </div>
            <a href="/logout" class="btn-logout">Disconnect</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="marketplace-hero">
        <h2>Discover, Collect, and Sell NFTs</h2>
        <p>Explore the world's largest NFT marketplace on XRP Ledger</p>
        <div class="hero-stats">
            <div class="stat-item">
                <h3>10,234</h3>
                <p>Total NFTs</p>
            </div>
            <div class="stat-item">
                <h3>2,500+</h3>
                <p>Artists</p>
            </div>
            <div class="stat-item">
                <h3>5.2M XRP</h3>
                <p>Volume Traded</p>
            </div>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="filter-section">
        <div class="filter-tabs">
            <button class="filter-tab active">All Items</button>
            <button class="filter-tab">Art</button>
            <button class="filter-tab">Music</button>
            <button class="filter-tab">Gaming</button>
            <button class="filter-tab">Photography</button>
        </div>
        <div class="filter-sort">
            <select class="sort-select">
                <option>Recently Listed</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
                <option>Most Popular</option>
            </select>
        </div>
    </section>

    <!-- NFT Grid -->
    <section class="nft-grid">
        <!-- NFT Card 1 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=1" alt="NFT">
                <div class="nft-badge">Art</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Cosmic Dreams #1</h3>
                <p class="nft-creator">By @CryptoArtist</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">250 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>

        <!-- NFT Card 2 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=2" alt="NFT">
                <div class="nft-badge">Music</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Ethereal Beats</h3>
                <p class="nft-creator">By @SoundWave</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">150 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>

        <!-- NFT Card 3 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=3" alt="NFT">
                <div class="nft-badge">Gaming</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Legendary Sword</h3>
                <p class="nft-creator">By @GameDev</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">500 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>

        <!-- NFT Card 4 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=4" alt="NFT">
                <div class="nft-badge">Photography</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Mountain Sunrise</h3>
                <p class="nft-creator">By @NatureShot</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">180 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>

        <!-- NFT Card 5 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=5" alt="NFT">
                <div class="nft-badge">Art</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Abstract Reality</h3>
                <p class="nft-creator">By @ModernArt</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">320 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>

        <!-- NFT Card 6 -->
        <div class="nft-card">
            <div class="nft-image">
                <img src="https://picsum.photos/400/400?random=6" alt="NFT">
                <div class="nft-badge">Gaming</div>
            </div>
            <div class="nft-info">
                <h3 class="nft-title">Dragon Armor</h3>
                <p class="nft-creator">By @RPGMaster</p>
                <div class="nft-price">
                    <div class="price-info">
                        <span class="price-label">Price</span>
                        <span class="price-value">450 XRP</span>
                    </div>
                    <button class="btn-buy">Buy Now</button>
                </div>
            </div>
        </div>
    </section>

    <!-- NFT Detail Modal -->
    <div id="nftModal" class="nft-modal hidden">
        <div class="nft-modal-content">
            <button class="nft-modal-close" id="closeNftModal">&times;</button>

            <div class="nft-modal-grid">
                <!-- Left: Image -->
                <div class="nft-modal-image">
                    <img id="modalImage" src="" alt="NFT">
                    <div class="nft-modal-badge" id="modalBadge">Art</div>
                </div>

                <!-- Right: Details -->
                <div class="nft-modal-details">
                    <h2 id="modalTitle">NFT Title</h2>
                    <p class="modal-creator">Created by <span id="modalCreator">@artist</span></p>

                    <div class="modal-description">
                        <h3>Description</h3>
                        <p id="modalDescription">This is a unique digital artwork minted on the XRP Ledger. Each piece is one-of-a-kind and comes with full ownership rights.</p>
                    </div>

                    <div class="modal-properties">
                        <h3>Properties</h3>
                        <div class="property-grid">
                            <div class="property-item">
                                <span class="property-label">Token ID</span>
                                <span class="property-value">#12345</span>
                            </div>
                            <div class="property-item">
                                <span class="property-label">Contract</span>
                                <span class="property-value">XRPL NFT</span>
                            </div>
                            <div class="property-item">
                                <span class="property-label">Blockchain</span>
                                <span class="property-value">XRP Ledger</span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-price-section">
                        <div class="modal-current-price">
                            <span class="price-label">Current Price</span>
                            <div class="price-amount">
                                <span id="modalPrice">250 XRP</span>
                                <span class="price-usd">â‰ˆ $125.00 USD</span>
                            </div>
                        </div>

                        <div class="modal-actions">
                            <button class="btn-modal-buy" id="modalBuyBtn">
                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                                    <path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2 5m4-5l2 5m0 0h6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Buy Now
                            </button>
                            <button class="btn-modal-offer">Make Offer</button>
                        </div>
                    </div>

                    <div class="modal-seller-info">
                        <div class="seller-avatar">ðŸ‘¤</div>
                        <div class="seller-details">
                            <span class="seller-label">Seller</span>
                            <span class="seller-address">rXXX...XXXX</span>
                        </div>
                        <button class="btn-seller-view">View Profile</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/toast.js"></script>
    <script src="/js/marketplace.js"></script>
    <script>
        toast.success('Welcome to NFT Marketplace!');
    </script>
</body>
</html>
